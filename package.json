{
    "name": "fractal-monorepo",
    "version": "2.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --no-cache --parallel --continue",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "test": "turbo run test",
        "clean": "yarn clean:turbo && yarn clean:watchman",
        "clean:turbo": "yarn turbo run clean && rm -rf node_modules",
        "clean:watchman": "watchman watch-del-all && yarn cache clean",
        "web:expo": "cd apps/fractal-ui-expo-example && yarn web",
        "web:react": "cd apps/fractal-ui-react-js-example && yarn start",
        "web:next": "cd apps/fractal-ui-next-js-example && yarn dev",
        "web:vite": "cd apps/fractal-ui-vite-example && yarn dev",
        "native": "cd apps/fractal-ui-expo-example && yarn start"
    },
    "devDependencies": {
        "@types/jest": "^29.4.0",
        "@types/react": "^18.0.17",
        "@types/react-native": "^0.69.5",
        "@typescript-eslint/eslint-plugin": "^5.40.0",
        "@typescript-eslint/parser": "^5.40.0",
        "eslint": "^8.25.0",
        "eslint-config-universe": "^11.1.0",
        "expo-module-scripts": "^2.1.1",
        "jest": "^29.5.0",
        "prettier": "^2.7.1",
        "ts-jest": "^29.0.5",
        "turbo": "^1.8.2",
        "typescript": "^4.7.4"
    },
    "resolutions": {
        "@types/react": "^18.0.17",
        "react": "18.2.0",
        "react-native": "0.70.5",
        "@react-native-community/slider": "4.2.4",
        "expo-device": "~5.0.0",
        "react-native-svg": "13.4.0",
        "framer-motion": "^6.5.1",
        "typescript": "^4.7.4"
    },
    "eslintConfig": {
        "extends": "universe/native"
    }
}
