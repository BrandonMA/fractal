{
  "name": "fractal-turborepo",
  "version": "2.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "yarn clean:turbo && yarn clean:watchman",
    "clean:turbo": "yarn turbo run clean && rm -rf node_modules",
    "clean:watchman": "watchman watch-del-all && yarn cache clean"
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "latest"
  },
  "resolutions": {
    "@types/react": "^18.0.18",
    "react": "18.2.0",
    "react-native": "0.69.6",
    "@react-native-community/slider": "^4.3.1",
    "expo-device": "^4.3.0",
    "react-native-svg": "12.4.4",
    "react-native-reanimated": "~2.9.1"
  },
  "turbo": {
    "baseBranch": "origin/master",
    "pipeline": {
      "build": {
        "outputs": [
          "dist/**",
          ".next/**",
          "public/dist/**"
        ],
        "dependsOn": ["^build"]
      },
      "test": {
        "dependsOn": ["^build"],
        "outputs": [
          "coverage/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "clean": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
