{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "outputs": ["dist/**", ".next/**", "public/dist/**"],
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"]
        },
        "lint": {
            "outputs": []
        },
        "lint:fix": {
            "outputs": []
        },
        "clean": {
            "outputs": []
        },
        "dev": {
            "cache": false
        }
    }
}
